{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ES2022"],
		"jsx": "react-jsx",
		"resolveJsonModule": true,
		"outDir": "dist",
		"rootDir": ".",
		"strict": true,
		"exactOptionalPropertyTypes": true,
		"noUncheckedIndexedAccess": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/sources/**/*", "src/db/**/*", "src/logger.ts", "server/**/*"],
	"exclude": ["node_modules", "dist", "dist-web", "**/*.test.ts", "**/*.test.tsx", "src/web/**/*"]
}
